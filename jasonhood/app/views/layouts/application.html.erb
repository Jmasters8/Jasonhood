<!DOCTYPE html>
<html>
  <head>
    <title>Jasonhood</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
      window.currentUser = {
        "id": <%= current_user.id %>,
        "first_name": "<%= current_user.first_name%>",
        "last_name": "<%= current_user.last_name %>",
        "email": "<%= current_user.email %>"
      };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
